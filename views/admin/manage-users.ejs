<!DOCTYPE html>  
<html lang="en">  
<head>  
    <meta charset="UTF-8">  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  
    <title>Manage Users</title>  
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">  
    <style>  
        .logo {  
            width: 250px; /* Set the desired width for the logo */  
            height: auto; /* Maintain aspect ratio */  
            margin-bottom: 10px; /* Space between logo and title */  
        }  
    </style>  
</head>  
<body class="bg-gray-100">  
    <div class="container mx-auto p-6">  
        <div class="flex items-center justify-between mb-6">  
            <img src="../images/parkuy2.png" alt="Parking Logo" class="logo" />  
            <div class="text-center flex-1">  
                <h1 class="text-4xl font-bold text-gray-800 mt-2">Manage Users</h1>  
            </div>  
        </div>  

        <nav class="flex justify-start space-x-4 mb-6">  
            <a href="/admin/dashboard" class="text-blue-600 hover:underline">Return Dashboard</a>  
            <form action="/logout" method="POST" style="display:inline;">  
                <button type="submit" class="text-blue-600 hover:underline focus:outline-none">Logout</button>  
            </form>   
        </nav>  

        <% if (typeof message !== 'undefined' && message) { %>  
            <div class="bg-green-200 text-green-800 p-2 rounded mb-4">  
                <%= message %>  
            </div>  
        <% } %>  

        <table class="min-w-full bg-white border border-gray-300 shadow-md">  
            <thead>  
                <tr>  
                    <th class="border-b-2 border-gray-300 px-4 py-2">User ID</th>  
                    <th class="border-b-2 border-gray-300 px-4 py-2">Username</th>  
                    <th class="border-b-2 border-gray-300 px-4 py-2">Coins</th>  
                    <th class="border-b-2 border-gray-300 px-4 py-2">Top Up</th>  
                </tr>  
            </thead>  
            <tbody>  
                <% users.forEach(user => { %>  
                    <tr class="hover:bg-gray-100 transition-colors duration-200">  
                        <td class="border-b border-gray-300 px-4 py-2"><%= user.id %></td>  
                        <td class="border-b border-gray-300 px-4 py-2"><%= user.username %></td>  
                        <td class="border-b border-gray-300 px-4 py-2"><%= user.coins %></td>  
                        <td class="border-b border-gray-300 px-4 py-2">  
                            <form action="/admin/top-up" method="POST">  
                                <input type="hidden" name="userId" value="<%= user.id %>">  
                                <input type="number" name="amount" min="1" required class="border rounded px-2 py-1">  
                                <button type="submit" class="bg-blue-500 text-white px-2 py-1 rounded">Top Up</button>  
                            </form>  
                        </td>  
                    </tr>  
                <% }); %>  
            </tbody>  
        </table>  
    </div>  
</body>  
</html>