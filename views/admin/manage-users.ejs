<!DOCTYPE html>  
<html lang="en">  
<head>  
    <meta charset="UTF-8">  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  
    <title>Manage Users</title>  
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">  
</head>  
<div class="space-x-4">  
    <a href="/admin/dashboard" class="text-blue-600 hover:underline">Return Dashboard</a>  
</div>  
<body class="bg-gray-100">  
    <div class="container mx-auto mt-5">  
        <h1 class="text-3xl font-bold mb-5">Manage Users</h1>  
        
        <% if (typeof message !== 'undefined' && message) { %>  
            <div class="bg-green-200 text-green-800 p-2 rounded mb-4">  
                <%= message %>  
            </div>  
        <% } %>  

        <table class="min-w-full bg-white border border-gray-300">  
            <thead>  
                <tr>  
                    <th class="border-b-2 border-gray-300 px-4 py-2">User ID</th>  
                    <th class="border-b-2 border-gray-300 px-4 py-2">Username</th>  
                    <th class="border-b-2 border-gray-300 px-4 py-2">Coins</th>  
                    <th class="border-b-2 border-gray-300 px-4 py-2">Top Up</th>  
                </tr>  
            </thead>  
            <tbody>  
                <% users.forEach(user => { %>  
                    <tr>  
                        <td class="border-b border-gray-300 px-4 py-2"><%= user.id %></td>  
                        <td class="border-b border-gray-300 px-4 py-2"><%= user.username %></td>  
                        <td class="border-b border-gray-300 px-4 py-2"><%= user.coins %></td>  
                        <td class="border-b border-gray-300 px-4 py-2">  
                            <form action="/admin/top-up" method="POST">  
                                <input type="hidden" name="userId" value="<%= user.id %>">  
                                <input type="number" name="amount" min="1" required>  
                                <button type="submit" class="bg-blue-500 text-white px-2 py-1">Top Up</button>  
                            </form>  
                        </td>  
                    </tr>  
                <% }); %>  
            </tbody>  
        </table>  
    </div>  
</body>  
</html>