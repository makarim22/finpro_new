<!DOCTYPE html>  
<html lang="en">  
<head>  
    <meta charset="UTF-8">  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  
    <title>Admin Dashboard</title>  
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">  
</head>  
<body class="bg-gray-100">  
    <div class="container mx-auto p-6">  
        <header class="flex justify-between items-center mb-6">  
            <h1 class="text-4xl font-bold text-gray-800">Admin Dashboard</h1>  
            <div class="space-x-4">  
                <a href="/admin/manage-users" class="text-blue-600 hover:underline">Manage User Coins</a>  
                <a href="/admin/monitor-parking" class="text-blue-600 hover:underline">Monitor Parking Spaces</a>  
            </div>  
        </header>  

        <section class="mt-8">  
            <h2 class="text-xl mb-3">Parking Lots Overview</h2>  
            <table class="min-w-full bg-white border border-gray-300 shadow-md rounded-lg overflow-hidden">  
                <thead class="bg-gray-200">  
                    <tr>  
                        <th class="border-b-2 border-gray-300 px-4 py-2 text-left text-gray-700">Lot Name</th>  
                        <th class="border-b-2 border-gray-300 px-4 py-2 text-left text-gray-700">Car Available Spots</th>  
                        <th class="border-b-2 border-gray-300 px-4 py-2 text-left text-gray-700">Motorcycle Available Spots</th>  
                    </tr>  
                </thead>  
                <tbody class="text-gray-600">  
                    <% parkingLots.forEach(lot => { %>  
                        <tr class="hover:bg-gray-100 transition-colors duration-200">  
                            <td class="border-b border-gray-300 px-4 py-3"><%= lot.name %></td>  
                            <td class="border-b border-gray-300 px-4 py-3"><%= lot.carAvailableSpot %></td>  
                            <td class="border-b border-gray-300 px-4 py-3"><%= lot.motorcycleAvailableSpot %></td>  
                        </tr>  
                    <% }); %>  
                </tbody>  
            </table>  
        </section>  
    </div>  
</body>  
</html>