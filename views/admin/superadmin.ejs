<!-- views/superadmin/superadmin.ejs -->  
<!DOCTYPE html>  
<html lang="en">  
<head>  
    <meta charset="UTF-8">  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  
    <title>Superadmin Dashboard</title>  
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">  
</head>  
<body class="bg-gray-100">  
    <div class="container mx-auto p-6">  
        <h1 class="text-3xl font-bold text-center mb-5">Superadmin Dashboard</h1>  
        
        <table class="min-w-full bg-white">  
            <thead>  
                <tr>  
                    <th class="py-2">Username</th>  
                    <th class="py-2">Role</th>  
                    <th class="py-2">Actions</th>  
                </tr>  
            </thead>  
            <tbody>  
                <% users.forEach(user => { %>  
                    <tr>  
                        <td class="border px-4 py-2"><%= user.username %></td>  
                        <td class="border px-4 py-2"><%= user.role %></td>  
                        <td class="border px-4 py-2">  
                            <form action="/superadmin/delete/<%= user.id %>" method="POST" class="inline">  
                                <button type="submit" class="text-red-600 hover:underline">Delete</button>  
                            </form>  
                        </td>  
                    </tr>  
                <% }) %>  
            </tbody>  
        </table>  

        <div class="text-center mt-5">  
            <a href="/admin/dashboard" class="text-blue-500 hover:underline">Back to Dashboard</a>  
        </div>  
    </div>  
</body>  
</html>